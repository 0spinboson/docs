<!--[if IE 8 ]><html class="ie ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--><html lang="en"> <!--<![endif]-->
<head>

	<meta charset="utf-8">
	<title>{{ title }} - Pilex documentation </title>
	<meta name="description" content="">
	<meta name="author" content="">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

	<!-- Skeleton -->
	<link rel="stylesheet" href="/view/css/base.css">
	<link rel="stylesheet" href="/view/css/skeleton.css">
	<link rel="stylesheet" href="/view/css/layout.css">

	<script src="/view/js/jquery-1.8.1.min.js"></script>

	<!-- Highlighter --> 
	<script type="text/javascript" src="/view/js/shCore.js"></script>
	<script type="text/javascript" src="/view/js/shBrushJScript.js"></script>
	<script type="text/javascript" src="/view/js/shBrushPlain.js"></script>
	<script type="text/javascript" src="/view/js/shBrushPhp.js"></script>
	<script type="text/javascript" src="/view/js/shBrushXml.js"></script>
	<link href="/view/css/shCore.css" rel="stylesheet" type="text/css" />
	<link href="/view/css/shThemeDefault.css" rel="Stylesheet" type="text/css" />	


	<script type="text/javascript" src="/view/js/jquery.fancybox.js"></script>
	<script type="text/javascript" src="/view/js/jquery.stickem.js"></script>
	<script type="text/javascript" src="/view/js/docs.js"></script>


	<link rel="stylesheet" href="/view/css/pilex.css">

	<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->



</head>
<body>


	<div class="container">
		<div class="sixteen columns">
			<h1 class="remove-bottom" style="margin-top: 40px">Pilex documentation</h1>
			<h5>Version {{ version }}</h5>
			<hr />
		</div>

			<div class="four columns sidebar">

			<h3>Contents</h3>
			<ul>
			{% for link,name in menu %}
				<li {% if current==link %}class='current'{% endif %}><a href="/{{link}}">{{name}}</a>
					{% if current==link %}
					<ul>
						{% for link,name in submenu %}
							<li><a href="#{{link}}">{{name}}</a>
						{% endfor %}
					</ul>
					{% endif %}
				</li>
			{% endfor %}
			</ul>
			</div>


			<div class="eleven columns offset-by-one content">
				
				{{ source|raw }}

				<hr style='margin-top: 36px;'>
			</div>

	</div><!-- container -->

</body>
</html>