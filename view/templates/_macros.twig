{% macro table(data, linear) %}

    {% if data is iterable %}

        <table {% if linear %}class="linear"{% endif %}>

        {% for row in data %}
            <tr>
            {% if loop.first %}
                {% set cellcounter = row|length %}
                {% set header = true %}
                {% for cell in row %}
                    <th> {{ cell }} </th>
                {% endfor %}

            {% else %}

                {% for cell in row %}
                    <td> {{ cell|markdown }} </td>
                    {% if loop.last and (loop.index < cellcounter) %}
                        <td>&nbsp;</td>
                    {% endif %}
                {% endfor %}

            {% endif %}

            </tr>
        {% endfor %}

        </table>

    {% endif %}

{% endmacro %}


{% macro menu(page, current) %}
    {# page \Bolt\Docs\Page #}
    {# current \Bolt\Docs\Page #}
    {% from _self import menu %}

    {% set selected = current.url starts with page.url %}
    <li class="jqtree_common {{ page.subPages is not empty ? ' jqtree-folder' }}{{ not selected ? ' jqtree-closed' }}{{ current.url == page.url ? ' jqtree-selected'}}">
        <div class="jqtree-element">
            {% if page.subPages is not empty %}
                <a href="{{ page.url }}"><span class="jqtree-title jqtree-title-folder">{{ page.title }}</span></a>
                <a href="{{ page.url }}" class="jqtree-toggler jqtree-closed jqtree-toggler-left">{{ selected ? '-' : '+' }}</a>

            {% else %}
                <a href="{{ page.url }}" class="jqtree-title">{{ page.title }}</a>
            {% endif %}
            {% if current.url == page.url %}
                {{ include('_sub_quicklinks.twig') }}
            {% endif %}
        </div>
        {% if page.subPages %}
        <ul class="jqtree_common">
            {% for sub in page.subPages %}
                {{ menu(sub, current) }}
            {% endfor %}
        </ul>
        {% endif %}
    </li>
{% endmacro %}

{% macro sitemap(page) %}
    {% from _self import sitemap %}
    <url><loc>https://docs.bolt.cm{{ page.url }}</loc></url>
    {% for sub in page.subPages %}
        {{ sitemap(sub) }}
    {% endfor %}
{% endmacro %}
