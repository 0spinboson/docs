<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title|raw }} | Bolt Documentation</title>
    <meta name="DCTERMS.title" content="Bolt CMS"/>
    <meta name="robots" content="noydir, noodp"/>

    <link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml" />
    <link rel="shortcut icon" href="{{ asset('images/favicon-bolt.png') }}">
    <link href='//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400italic,600,600italic' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/docsearch.js/1/docsearch.min.css" />
    <link rel="stylesheet" href="{{ asset('styles/docs.css') }}" type="text/css" media="all" />

{% block canonical %}
{% endblock canonical %}

{% block extrahead %}
{% endblock extrahead %}

{% include '_headerscripts.twig' %}

</head>

<body class="body-docs">

    <header style="background-image: url(/files/header_57.jpg);">
        <div class="inner">

            <h1 id="logo"><img src="{{ asset('images/bolt.png') }}" width='200' alt="BoltCM" /></h1>
            <h2 class="payoff">Sophisticated, Lightweight and Simple</h2>

            <a class="menu-toggle"><span></span></a>
        </div>
    </header>

    <nav class="main-nav expanded">
        <ul>
            {% set route = global.request.attributes.get('_route') %}
            {% set route_params = global.request.attributes.get('_route_params') %}
            <li>
                <a href="https://bolt.cm/">Home [bolt.cm]</a>
            </li>
            <li class="{{ route == 'page' and not (route_params.page starts with 'manual') ? 'active' }}">
                <a href="{{ path('page', {version: version})}}">Documentation</a>
            </li>
            <li class="{{ route == 'page' and route_params.page starts with 'manual' ? 'active' }}">
                <a href="{{ path('page', {version: version, page: 'manual'}) }}">Manual</a>
            </li>
            <li class="{{ route == 'cheatsheet' ? 'active' }}">
                <a href="{{ path('cheatsheet', {version: version}) }}">Cheatsheet</a>
            </li>

        </ul>
    </nav>

    <div class="clearfix"></div>

    <main class="row">

{% block content %}
    (content goes here)
{% endblock content %}

    </main>
    <script>var prefix = "";</script>
    <script src="{{ asset('js/jquery.js') }}"></script>
    <script src="{{ asset('js/docs.js') }}" type="text/javascript"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/docsearch.js/1/docsearch.min.js"></script>
    <script type="text/javascript"> docsearch({
        apiKey: '1b46aac18cdcead6090088f1994f7ea8',
        indexName: 'bolt',
        inputSelector: '#algolia-search',
        algoliaOptions: { 'facetFilters': [ "version:{{ version }}"] }
        });
    </script>

{% block extrafooter %}
{% endblock extrafooter %}

</body>
</html>
